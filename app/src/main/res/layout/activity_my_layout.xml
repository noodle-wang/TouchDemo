<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyLayoutActivity">
    <com.leon.touchdemo.view.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.leon.touchdemo.view.MyButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button1" />

        <com.leon.touchdemo.view.MyButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button2" />
        <com.leon.touchdemo.view.MyImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/drawable_rectangle"/>

    </com.leon.touchdemo.view.MyLayout>

</androidx.constraintlayout.widget.ConstraintLayout>